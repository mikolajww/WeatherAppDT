<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content" >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/loading_progress_bar1"
            android:id="@+id/linearLayout3">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/day1" android:layout_weight="1"
                    tools:text="Weekday" android:textSize="30sp" android:textAlignment="center"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                    android:id="@+id/icon1" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/desc1" android:layout_weight="1"
                    tools:text="Desc" android:textAlignment="center" android:textSize="30sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/temp1" android:layout_weight="1"
                    tools:text="Temp" android:textAlignment="center" android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/day2" android:layout_weight="1"
                    tools:text="Weekday" android:textSize="30sp" android:textAlignment="center"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                    android:id="@+id/icon2" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/desc2" android:layout_weight="1"
                    tools:text="Desc" android:textAlignment="center" android:textSize="30sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/temp2" android:layout_weight="1"
                    tools:text="Temp" android:textAlignment="center" android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/day3" android:layout_weight="1"
                    tools:text="Weekday" android:textSize="30sp" android:textAlignment="center"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                    android:id="@+id/icon3" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/desc3" android:layout_weight="1"
                    tools:text="Desc" android:textAlignment="center" android:textSize="30sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/temp3" android:layout_weight="1"
                    tools:text="Temp" android:textAlignment="center" android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/day4" android:layout_weight="1"
                    tools:text="Weekday" android:textSize="30sp" android:textAlignment="center"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" tools:src="@tools:sample/avatars[0]"
                    android:id="@+id/icon4" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/desc4" android:layout_weight="1"
                    tools:text="Desc" android:textAlignment="center" android:textSize="30sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/temp4" android:layout_weight="1"
                    tools:text="Temp" android:textAlignment="center" android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
            android:layout_width="219dp"
            android:layout_height="55dp"
            android:indeterminate="true" android:id="@+id/loading_progress_bar1"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>